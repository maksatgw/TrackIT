@model ProductRegisterViewModel
@{
    ViewData["Title"] = "New";
}

<form asp-action="New" asp-controller="ProductRegister" method="post">
    <div class="mb-4">
        <label class="form-label" asp-for="ProductRegisterAdd.AppUserId">Zimmet Sahibi</label>
        <select asp-for="ProductRegisterAdd.AppUserId"
                asp-items="@(new SelectList(Model.Users, "Id", "UserName"))"
                class="form-select">
        </select>
        <br />
        <label class="form-label" asp-for="ProductRegisterAdd.ProductId">Ürün</label>
        @if (Model.ProductsGet == null)
        {
            <h3>Zimmetlenecek öğe yok. Zimmet listesi ve envanteri kontrol edin.</h3>
        }
        else
        {
            <select asp-for="ProductRegisterAdd.ProductId"
                asp-items="@(new SelectList(Model.ProductsGet, "ProductId", "Name"))"
                class="form-select">
            </select>
        }

    </div>
    <div class="modal-footer">
        @if (Model.ProductsGet != null)
        {
            <button type="submit" class="btn btn-sm btn-primary">Zimmetle</button>
        }
        <a class="btn btn-sm btn-alt-secondary" href="/ProductRegister/Index">Geri dön</a>
    </div>
</form>
