@model ProductRegisterViewModel

<div class="block-header block-header-default">
    <h3 class="block-title">Zimmetler</h3>
    <div class="block-header block-header-default">
        <div class="block-options">
            <div class="dropdown">
                <button type="button" class="btn btn-alt-secondary" id="dropdown-ecom-filters2" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Kategori <i class="fa fa-angle-down ms-1"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdown-ecom-filters2">
                    @foreach (var item in Model.Categories)
                    {
                        <a class="dropdown-item d-flex align-items-center justify-content-between" href="/ProductRegister/index?categoryId=@item.CategoryId">
                            @item.Name
                        </a>
                    }
                </div>
            </div>
        </div>
        <div class="block-options">
            <div class="dropdown">
                <button type="button" class="btn btn-alt-secondary" id="dropdown-ecom-filters2" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Kullanıcılar <i class="fa fa-angle-down ms-1"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdown-ecom-filters2">
                    @foreach (var item in Model.Users)
                    {
                        <a class="dropdown-item d-flex align-items-center justify-content-between" href="/ProductRegister/index?userId=@item.Id">
                            @item.UserName
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
