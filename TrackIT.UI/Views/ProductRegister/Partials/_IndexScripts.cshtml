<script>
    function confirmDelete(productId) {
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu ürünü silmek istediğinizden emin misiniz?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, Sil',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                // Silme isteğini gönder
                window.location.href = `/Product/Remove?productId=${productId}`;
            }
        });
    }
</script>

<script>
    $('#modal-default-fadein').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget); // Tetikleyen butonu al
        var productId = button.data('product-id'); // Butondan ID'yi al
        var prodId = button.data('prod-id');
        // Modal içindeki formun AppUserId alanına ID'yi ata
        $(this).find('#messi').val(productId);
        $(this).find('#ronaldo').val(prodId);

    });
</script>