@model SearchViewModel

<div class="tab-pane fade" id="search-customers" role="tabpanel" aria-labelledby="search-customers-tab" tabindex="0">
    <div class="fs-3 fw-semibold pt-2 pb-4 mb-4 text-center border-bottom">
        <span class="text-primary fw-bold">@Model.Categories.Count</span> Kategori Bulundu <mark class="text-danger">TrackIT</mark>

    </div>
    <div class="table-responsive">
        <table class="table table-borderless table-striped table-vcenter">
            <thead>
                <tr>
                    <th class="text-center" style="width: 100px;">ID</th>
                    <th class="d-none d-sm-table-cell text-center">Ürün İsmi</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Categories.Count == 0)
                {
                    <tr>
                        <td colspan="7" class="d-none d-sm-table-cell text-center fs-sm">Veri yok</td>
                    </tr>
                }
                @foreach (var item in Model.Categories)
                {
                    <tr>
                        <td class="text-center fs-sm">
                            <strong>@item.CategoryId</strong>
                        </td>
                        <td class="d-none d-sm-table-cell text-center fs-sm">@item.Name</td>
                        <td class="text-end fs-sm">
                            <a class="btn btn-sm btn-alt-secondary">
                                <i class="fa fa-fw fa-pen"></i>
                            </a>
                            <a class="btn btn-sm btn-alt-secondary">
                                <i class="fa fa-fw fa-clock-rotate-left"></i>
                            </a>
                            <a class="btn btn-sm btn-alt-secondary">
                                <i class="fa fa-fw fa-times text-danger"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
  
</div>
