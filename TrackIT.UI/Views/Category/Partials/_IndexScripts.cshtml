<script>
    function confirmDelete(productId) {
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Kategori Silerseniz Kategori Dahilinde Olan Ürünler Sistemden Silinecektir.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, Sil',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                // Silme isteğini gönder
                window.location.href = `/Category/Remove?id=${productId}`;
            }
        });
    }
</script>

<script>
    $('#category-update-modal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget); // Get the triggering button
        var categoryId = button.data('category-id'); // Get the ID from the button
        var categoryName = button.data('category-name');
        // Set the value of the input field in the modal
        $(this).find('#category_id_input').val(categoryId);
        $(this).find('#category_name_input').val(categoryName);
    });
</script>