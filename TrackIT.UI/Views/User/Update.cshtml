@model UserViewModel
@{
    ViewData["Title"] = "Update";
}
<div class="block block-rounded">
    <div class="block-content">
        <form asp-action="Update" asp-controller="User" method="post">
            <div class="row push">
                <div class="col-lg-12 col-xl-12">
                    <input type="hidden" class="form-control" asp-for="UserUpdate.Id">
                    <div class="mb-4">
                        <label class="form-label" asp-for="UserUpdate.Email">Kullanıcı Maili</label>
                        <input type="text" class="form-control" asp-for="UserUpdate.Email" placeholder="email">
                        <span class="badge bg-danger" asp-validation-for="UserUpdate.Email"></span>
                    </div>
                    <div class="mb-4">
                        <label class="form-label" asp-for="UserUpdate.UserName">Kullanıcı Adı</label>
                        <input type="text" class="form-control" asp-for="UserUpdate.UserName" placeholder="user">
                        <span class="badge bg-danger" asp-validation-for="UserUpdate.UserName"></span>
                    </div>
                    <div class="mb-4">
                        <label class="form-label" asp-for="UserUpdate.Name">Adı</label>
                        <input type="text" class="form-control" asp-for="UserUpdate.Name" placeholder="Adı">
                        <span class="badge bg-danger" asp-validation-for="UserUpdate.Name"></span>
                    </div>
                    <div class="mb-4">
                        <label class="form-label" asp-for="UserUpdate.Surname">Soyadı</label>
                        <input type="text" class="form-control" asp-for="UserUpdate.Surname" placeholder="Soyadı">
                        <span class="badge bg-danger" asp-validation-for="UserUpdate.Surname"></span>
                    </div>
                    <div class="mb-4">
                        <label class="form-label" asp-for="UserUpdate.RoleName">Rol</label>
                        <select asp-for="UserUpdate.RoleName"
                                asp-items="@(new SelectList(Model.AppRoles, "Name", "Name"))"
                                class="form-select">
                        </select>
                    </div>
                    <div class="modal-footer">
                        <a href="/User/Index" class="btn btn-sm btn-alt-secondary">İptal</a>
                        <button type="submit" class="btn btn-sm btn-primary">Kaydet</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>