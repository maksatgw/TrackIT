@model UserAddDto
@{
    ViewData["Title"] = "New";
}

<div class="block block-rounded">
    <div class="block-content">
        <form asp-action="New" asp-controller="User" method="post">
            <div class="row push">
                <div class="col-lg-12 col-xl-12">
                    <div class="mb-4">
                        <label class="form-label" asp-for="Email">Kullanıcı Maili</label>
                        <input type="text" class="form-control" asp-for="Email" placeholder="email">
                        <span class="badge bg-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-4">
                        <label class="form-label" asp-for="UserName">Kullaıncı Adı</label>
                        <input type="text" class="form-control" asp-for="UserName" placeholder="user">
                        <span class="badge bg-danger" asp-validation-for="UserName"></span>

                    </div>
                   
                    <div class="modal-footer">
                        <a href="/User/Index" class="btn btn-sm btn-alt-secondary">İptal</a>
                        <button type="submit" class="btn btn-sm btn-primary">Kaydet</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}